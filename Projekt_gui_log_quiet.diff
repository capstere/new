+function Get-GuiLogVerbosity {
+    # Returns: QUIET | NORMAL | DEV
+    try {
+        if ($global:Config) {
+            if ($global:Config -is [System.Collections.IDictionary] -and $global:Config.Contains('GuiLogVerbosity')) {
+                $v = [string]$global:Config['GuiLogVerbosity']
